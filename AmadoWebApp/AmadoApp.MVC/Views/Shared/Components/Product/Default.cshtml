@using AmadoApp.Core.Entities
@model IQueryable<Product>
@{
    var changer = ViewBag.Changer; 
}


@if(changer)
{
    <!-- Product Catagories Area Start -->
    <div class="products-catagories-area clearfix">
        <div class="amado-pro-catagory clearfix">

            @foreach (var item in Model)
            {
                <!-- Single Catagory -->
                <div class="single-products-catagory clearfix">
                    <a asp-route-id="@item.Id" asp-action="ProductSingle" asp-controller="Shop">
                        <img src="~/Upload/ProductImages/@item.ProductImages.FirstOrDefault().ImageUrl" alt="">
                        <!-- Hover Content -->
                        <div class="hover-content">
                            <div class="line"></div>
                            <p>From $@item.Price</p>
                            <h4>@item.Title</h4>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
    <!-- Product Catagories Area End -->
}
else
{
    @foreach (var item in Model)
    {
        <!-- Single Product Area -->
        <div class="col-12 col-sm-6 col-md-12 col-xl-6">
            <div class="single-product-wrapper">
                <!-- Product Image -->
                <div class="product-img">
                    <img src="~/Upload/ProductImages/@item.ProductImages.FirstOrDefault().ImageUrl" alt="">
                    <!-- Hover Thumb -->
                    <img class="hover-img" src="~/Upload/ProductImages/@item.ProductImages.Skip(1).FirstOrDefault().ImageUrl" alt="">

                </div>

                <!-- Product Description -->
                <div class="product-description d-flex align-items-center justify-content-between">
                    <!-- Product Meta Data -->
                    <div class="product-meta-data">
                        <div class="line"></div>
                        <p class="product-price">$@item.Price</p>
                        <a asp-route-id="@item.Id" asp-action="ProductSingle" asp-controller="Shop">
                            <h6>@item.Title</h6>
                        </a>
                    </div>
                    <!-- Ratings & Cart -->
                    <div class="ratings-cart text-right">
                        <div class="ratings">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </div>
                        <div class="cart">
                            <a href="cart.html" data-toggle="tooltip" data-placement="left" title="Add to Cart"><img src="~/assets/img/core-img/cart.png" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

